page,view,text,swiper,swiper-item,image,navigator{
  padding: 0;    
  margin: 0;
  box-sizing: border-box;
}
page {
  height: 100%;
}
.container {
  height: 100%;
  width: 100%;
  border-top: 1rpx solid #bfbfbf;
  background-color: white;
}
.header {
  display: flex;
  align-items: center;
  height: 90rpx;
  width: 88%;
  margin: 10rpx auto;
  background-color: azure;
  border: 1rpx solid #bfbfbf;
  border-radius: 10rpx;
  box-shadow: 0 0 9rpx #bfbfbf;
}
.search {
  flex: 1;
  height: 50rpx;
  margin-left: 10rpx;
}
.placehold {
  font-size: 13px;
}
.header image {
  height: 50rpx;
  width: 50rpx;
  margin-right: 20rpx;
}
.item-list {
  /* height: 300rpx; */
  width: 88%;
  margin: 0 auto;
  margin-top: 33rpx;
}
.notodolist {
  width: 88%;
  height: 500rpx;
  margin: 33rpx auto;
  border-radius: 10rpx;
  box-shadow: 0 0 9rpx #bfbfbf;
}
.no_text {
  color: #bfbfbf;
  font-size: 13px;
  line-height: 500rpx;  
  margin-left: 13rpx;
}
.item {
  display: flex;
  align-items: center;
  /* height: 88rpx; */
  margin-bottom: 9rpx;
  overflow: hidden;
  border: 1rpx solid #bfbfbf;
  border-radius: 10rpx;
  box-shadow: 0 0 9rpx #bfbfbf;
}
.item icon {
  margin-left: 6rpx;
}
.item text {
  margin-left: 6rpx;
  padding: 20rpx 0;
}
.true {
  color: #bfbfbf;
  text-decoration: line-through;
}
.footer {
  width: 88%;
  margin: 0 auto;
}
.footer text {
  font-size: 13px;
  text-decoration: underline;
  margin-left: 6rpx;
}